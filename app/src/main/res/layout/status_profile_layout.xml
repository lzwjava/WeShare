<?xml version="1.0" encoding="utf-8"?>

<com.avoscloud.demo.share.ui.PersonProfileLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profileLayout"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_margin="10dp"
    android:padding="10dp"
    android:layout_alignParentTop="true"
    android:background="@drawable/card_background_white">

    <ImageView
        android:id="@+id/avatar"
        android:layout_width="@dimen/status_layout_avatar_size"
        android:layout_height="@dimen/status_layout_avatar_size"
        android:layout_gravity="center_vertical"
        android:src="@drawable/default_user_avatar" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginLeft="20dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/name"
                android:layout_gravity="left|center_vertical"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:textStyle="bold"
                android:textSize="13sp"
                android:layout_height="wrap_content"
                android:text="name" />

        </LinearLayout>

    </LinearLayout>


    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right|center_vertical"
        android:scaleType="matrix"
        android:id="@+id/editHint"
        android:src="@drawable/mm_submenu" />


</com.avoscloud.demo.share.ui.PersonProfileLayout>